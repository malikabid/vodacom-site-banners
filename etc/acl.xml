<?xml version="1.0"?>
<!--
/**
 * ACL Resources Configuration
 * 
 * Defines Access Control List resources for Site Banners module.
 * Creates permission hierarchy:
 * - Vodacom_SiteBanners::banners - View banners (grid and forms)
 *   - Vodacom_SiteBanners::banner_save - Create and edit banners
 *   - Vodacom_SiteBanners::banner_delete - Delete banners
 * 
 * @category  Vodacom
 * @package   Vodacom_SiteBanners
 * @version   4.0.3
 */
-->
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::content">
                    <resource id="Vodacom_SiteBanners::banners" 
                              title="Site Banners" 
                              sortOrder="50">
                        <resource id="Vodacom_SiteBanners::banner_save" 
                                  title="Save Banner" 
                                  sortOrder="10"/>
                        <resource id="Vodacom_SiteBanners::banner_delete" 
                                  title="Delete Banner" 
                                  sortOrder="20"/>
                        <!-- API Resources - nested under banners -->
                        <resource id="Vodacom_SiteBanners::banner_view" 
                                  title="View Banners via API" 
                                  sortOrder="30"/>
                        <resource id="Vodacom_SiteBanners::banner_api_save" 
                                  title="Save Banners via API" 
                                  sortOrder="40"/>
                        <resource id="Vodacom_SiteBanners::banner_api_delete" 
                                  title="Delete Banners via API" 
                                  sortOrder="50"/>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
