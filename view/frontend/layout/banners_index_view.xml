<?xml version="1.0"?>
<!--
/**
 * Frontend Layout for Site Banners
 * 
 * V3.0.4 Changes:
 * - Added Block class="Vodacom\SiteBanners\Block\Banner" (previously no class specified)
 * - Block now provides Page Builder content filtering via filterContent() method
 * - Template can access getActiveBanners() for database queries
 */
-->
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <!-- V3.0.4: Added Block class for Page Builder content processing -->
            <block class="Vodacom\SiteBanners\Block\Banner" 
                   name="Vodacom_SiteBanners_View" 
                   template="Vodacom_SiteBanners::view.phtml"/>
        </referenceContainer>
    </body>
</page>