<?xml version="1.0"?>
<!--
/**
 * Dependency Injection Configuration
 * 
 * Configures data provider for banner grid UI component.
 * 
 * @category  Vodacom
 * @package   Vodacom_SiteBanners
 * @version   3.0.1
 */
-->
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    
    <!-- V4.0.1: Bind data interfaces to concrete implementations -->
    <preference for="Vodacom\SiteBanners\Api\Data\BannerInterface" 
                type="Vodacom\SiteBanners\Model\Banner"/>
    
    <preference for="Vodacom\SiteBanners\Api\Data\BannerSearchResultsInterface" 
                type="Vodacom\SiteBanners\Model\BannerSearchResults"/>
    
    <!-- V4.0.2: Bind repository interface to implementation -->
    <preference for="Vodacom\SiteBanners\Api\BannerRepositoryInterface" 
                type="Vodacom\SiteBanners\Model\BannerRepository"/>
    
    <!-- Data Provider Type Configuration -->
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="vodacom_sitebanners_banner_listing_data_source" xsi:type="string">Vodacom\SiteBanners\Model\ResourceModel\Banner\Grid\Collection</item>
            </argument>
        </arguments>
    </type>
    
    <!-- Grid Collection (extends base collection with search result interface) -->
    <virtualType name="Vodacom\SiteBanners\Model\ResourceModel\Banner\Grid\Collection" type="Magento\Framework\View\Element\UiComponent\DataProvider\SearchResult">
        <arguments>
            <argument name="mainTable" xsi:type="string">vodacom_sitebanners_banner</argument>
            <argument name="resourceModel" xsi:type="string">Vodacom\SiteBanners\Model\ResourceModel\Banner</argument>
        </arguments>
    </virtualType>
    
    <!-- V5.0.2: Configure Proxy for Heavy Dependency -->
    <!-- 
        This tells Magento: When BannerStats asks for HeavyBannerProcessor,
        inject a Proxy instead of the real class.
        
        Proxy = Lightweight placeholder
        Real class = Only created when you call a method
        
        Educational Value:
        - Shows lazy loading pattern
        - Demonstrates performance optimization
        - Illustrates when to use Proxy vs direct injection
    -->
    <type name="Vodacom\SiteBanners\Block\BannerStats">
        <arguments>
            <argument name="heavyProcessor" xsi:type="object">
                Vodacom\SiteBanners\Helper\HeavyBannerProcessor\Proxy
            </argument>
        </arguments>
    </type>
    
    <!-- V5.0.2: Register Console Command -->
    <type name="Magento\Framework\Console\CommandListInterface">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="vodacom_banner_demo_patterns" xsi:type="object">
                    Vodacom\SiteBanners\Console\Command\DemonstratePatterns
                </item>
            </argument>
        </arguments>
    </type>
    
    <!-- V6.0.1: Before Plugins Configuration -->
    <!--
        Before Plugins: Execute BEFORE the original method
        
        Plugin Naming Convention:
        - name: Unique identifier (snake_case recommended)
        - type: Full class name of plugin
        - sortOrder: Execution order (lower = earlier)
        
        Plugin Method Naming:
        - Pattern: before{OriginalMethodName}
        - Example: beforeSave() intercepts save()
        
        Execution Flow:
        1. TitleSanitizer::beforeSave() (sortOrder 5) - Modifies title
        2. SaveLogger::beforeSave() (sortOrder 10) - Logs operation
        3. Original BannerRepository::save() executes
        
        Use Cases:
        - Input validation
        - Data sanitization
        - Logging/auditing
        - Permission checks
    -->
    <type name="Vodacom\SiteBanners\Model\BannerRepository">
        <!-- Title Sanitizer Plugin - Executes FIRST (lowest sortOrder) -->
        <plugin name="banner_repository_title_sanitizer" 
                type="Vodacom\SiteBanners\Plugin\BannerRepositoryTitleSanitizer" 
                sortOrder="5"/>
        
        <!-- Save Logger Plugin - Executes SECOND (higher sortOrder) -->
        <plugin name="banner_repository_save_logger" 
                type="Vodacom\SiteBanners\Plugin\BannerRepositorySaveLogger" 
                sortOrder="10"/>
    </type>
    
</config>
