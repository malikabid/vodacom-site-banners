<?xml version="1.0"?>
<!--
/**
 * Site Banners Grid UI Component
 * 
 * Displays banner listing with columns, filters, sorting, and actions.
 * V3.0.1: Basic grid structure with all banner columns.
 * 
 * @category  Vodacom
 * @package   Vodacom_SiteBanners
 * @version   3.0.1
 */
-->
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">vodacom_sitebanners_banner_listing.vodacom_sitebanners_banner_listing_data_source</item>
        </item>
    </argument>
    
    <settings>
        <buttons>
            <button name="add">
                <url path="*/*/new"/>
                <class>primary</class>
                <label translate="true">Add New Banner</label>
            </button>
        </buttons>
        <spinner>vodacom_sitebanners_banner_columns</spinner>
        <deps>
            <dep>vodacom_sitebanners_banner_listing.vodacom_sitebanners_banner_listing_data_source</dep>
        </deps>
    </settings>
    
    <dataSource name="vodacom_sitebanners_banner_listing_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">banner_id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>
        <aclResource>Vodacom_SiteBanners::banners</aclResource>
        <dataProvider class="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider" name="vodacom_sitebanners_banner_listing_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>banner_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    
    <listingToolbar name="listing_top">
        <settings>
            <sticky>true</sticky>
        </settings>
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <filterSearch name="fulltext"/>
        <filters name="listing_filters">
            <filterSelect name="is_active" provider="${ $.parentName }">
                <settings>
                    <options class="Magento\Config\Model\Config\Source\Yesno"/>
                    <caption translate="true">Select...</caption>
                    <label translate="true">Active</label>
                    <dataScope>is_active</dataScope>
                </settings>
            </filterSelect>
        </filters>
        <!-- Mass Actions (V3.0.3) -->
        <massaction name="listing_massaction" component="Magento_Ui/js/grid/tree-massactions">
            <action name="delete">
                <settings>
                    <confirm>
                        <message translate="true">Are you sure you want to delete the selected banner(s)?</message>
                        <title translate="true">Delete Banners</title>
                    </confirm>
                    <url path="vodacom_sitebanners/banner/massDelete"/>
                    <type>delete</type>
                    <label translate="true">Delete</label>
                </settings>
            </action>
            <action name="enable">
                <settings>
                    <url path="vodacom_sitebanners/banner/massEnable"/>
                    <type>enable</type>
                    <label translate="true">Enable</label>
                </settings>
            </action>
            <action name="disable">
                <settings>
                    <url path="vodacom_sitebanners/banner/massDisable"/>
                    <type>disable</type>
                    <label translate="true">Disable</label>
                </settings>
            </action>
        </massaction>
        <paging name="listing_paging"/>
    </listingToolbar>
    
    <columns name="vodacom_sitebanners_banner_columns">
        <!-- Inline Editing Configuration (V3.0.3) -->
        <settings>
            <!-- Editor configuration for inline editing in grid -->
            <editorConfig>
                <param name="clientConfig" xsi:type="array">
                    <!-- URL for saving inline edits via AJAX -->
                    <item name="saveUrl" xsi:type="url" path="vodacom_sitebanners/banner/inlineEdit"/>
                    <item name="validateBeforeSave" xsi:type="boolean">false</item>
                </param>
                <!-- Primary key field used for identifying records -->
                <param name="indexField" xsi:type="string">banner_id</param>
                <!-- Enable inline editing feature -->
                <param name="enabled" xsi:type="boolean">true</param>
                <param name="selectProvider" xsi:type="string">vodacom_sitebanners_banner_listing.vodacom_sitebanners_banner_listing.vodacom_sitebanners_banner_columns.ids</param>
            </editorConfig>
            <!-- Default behavior: click on cell to start editing -->
            <childDefaults>
                <param name="fieldAction" xsi:type="array">
                    <item name="provider" xsi:type="string">vodacom_sitebanners_banner_listing.vodacom_sitebanners_banner_listing.vodacom_sitebanners_banner_columns_editor</item>
                    <item name="target" xsi:type="string">startEdit</item>
                    <item name="params" xsi:type="array">
                        <item name="0" xsi:type="string">${ $.$data.rowIndex }</item>
                        <item name="1" xsi:type="boolean">true</item>
                    </item>
                </param>
            </childDefaults>
        </settings>
        
        <selectionsColumn name="ids">
            <settings>
                <indexField>banner_id</indexField>
            </settings>
        </selectionsColumn>
        
        <column name="banner_id">
            <settings>
                <filter>textRange</filter>
                <label translate="true">ID</label>
                <sorting>asc</sorting>
            </settings>
        </column>
        
        <column name="title">
            <settings>
                <filter>text</filter>
                <!-- Inline editing: Text input with required validation -->
                <editor>
                    <validation>
                        <rule name="required-entry" xsi:type="boolean">true</rule>
                    </validation>
                    <editorType>text</editorType>
                </editor>
                <label translate="true">Title</label>
            </settings>
        </column>
        
        <column name="content">
            <settings>
                <filter>text</filter>
                <label translate="true">Content</label>
            </settings>
        </column>
        
        <column name="is_active" component="Magento_Ui/js/grid/columns/select">
            <settings>
                <options class="Magento\Config\Model\Config\Source\Yesno"/>
                <filter>select</filter>
                <!-- Inline editing: Yes/No dropdown -->
                <editor>
                    <editorType>select</editorType>
                </editor>
                <dataType>select</dataType>
                <label translate="true">Active</label>
            </settings>
        </column>
        
        <column name="active_from" class="Magento\Ui\Component\Listing\Columns\Date" component="Magento_Ui/js/grid/columns/date">
            <settings>
                <filter>dateRange</filter>
                <dataType>date</dataType>
                <label translate="true">Active From</label>
            </settings>
        </column>
        
        <column name="active_to" class="Magento\Ui\Component\Listing\Columns\Date" component="Magento_Ui/js/grid/columns/date">
            <settings>
                <filter>dateRange</filter>
                <dataType>date</dataType>
                <label translate="true">Active To</label>
            </settings>
        </column>
        
        <column name="sort_order">
            <settings>
                <filter>textRange</filter>
                <!-- Inline editing: Numeric input with number validation -->
                <editor>
                    <validation>
                        <rule name="validate-number" xsi:type="boolean">true</rule>
                    </validation>
                    <editorType>text</editorType>
                </editor>
                <label translate="true">Sort Order</label>
            </settings>
        </column>
        
        <column name="created_at" class="Magento\Ui\Component\Listing\Columns\Date" component="Magento_Ui/js/grid/columns/date">
            <settings>
                <filter>dateRange</filter>
                <dataType>date</dataType>
                <label translate="true">Created</label>
            </settings>
        </column>
        
        <actionsColumn name="actions" class="Vodacom\SiteBanners\Ui\Component\Listing\Column\BannerActions">
            <settings>
                <indexField>banner_id</indexField>
                <resizeEnabled>false</resizeEnabled>
                <resizeDefaultWidth>107</resizeDefaultWidth>
            </settings>
        </actionsColumn>
    </columns>
</listing>
