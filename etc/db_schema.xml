<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="vodacom_sitebanners_banner" resource="default" engine="innodb" comment="Vodacom Site Banners Table">
        <column xsi:type="int" name="banner_id" unsigned="true" nullable="false" identity="true"
                comment="Banner ID"/>
        <column xsi:type="varchar" name="title" nullable="false" length="255" comment="Banner Title"/>
        <column xsi:type="text" name="content" nullable="true" comment="Banner Content"/>
        <column xsi:type="smallint" name="is_active" unsigned="true" nullable="false" default="1"
                comment="Is Banner Active"/>
        <column xsi:type="int" name="sort_order" unsigned="false" nullable="false" default="0"
                comment="Sort Order"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Updated At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="banner_id"/>
        </constraint>
        <index referenceId="VODACOM_SITEBANNERS_BANNER_IS_ACTIVE" indexType="btree">
            <column name="is_active"/>
        </index>
        <index referenceId="VODACOM_SITEBANNERS_BANNER_SORT_ORDER" indexType="btree">
            <column name="sort_order"/>
        </index>
    </table>
</schema>
