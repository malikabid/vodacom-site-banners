<?xml version="1.0"?>
<!--
/**
 * Dependency Injection Configuration
 * 
 * Configures data provider for banner grid UI component.
 * 
 * @category  Vodacom
 * @package   Vodacom_SiteBanners
 * @version   3.0.1
 */
-->
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    
    <!-- V4.0.1: Bind data interfaces to concrete implementations -->
    <preference for="Vodacom\SiteBanners\Api\Data\BannerInterface" 
                type="Vodacom\SiteBanners\Model\Banner"/>
    
    <preference for="Vodacom\SiteBanners\Api\Data\BannerSearchResultsInterface" 
                type="Vodacom\SiteBanners\Model\BannerSearchResults"/>
    
    <!-- V4.0.2: Bind repository interface to implementation -->
    <preference for="Vodacom\SiteBanners\Api\BannerRepositoryInterface" 
                type="Vodacom\SiteBanners\Model\BannerRepository"/>
    
    <!-- Data Provider Type Configuration -->
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="vodacom_sitebanners_banner_listing_data_source" xsi:type="string">Vodacom\SiteBanners\Model\ResourceModel\Banner\Grid\Collection</item>
            </argument>
        </arguments>
    </type>
    
    <!-- Grid Collection (extends base collection with search result interface) -->
    <virtualType name="Vodacom\SiteBanners\Model\ResourceModel\Banner\Grid\Collection" type="Magento\Framework\View\Element\UiComponent\DataProvider\SearchResult">
        <arguments>
            <argument name="mainTable" xsi:type="string">vodacom_sitebanners_banner</argument>
            <argument name="resourceModel" xsi:type="string">Vodacom\SiteBanners\Model\ResourceModel\Banner</argument>
        </arguments>
    </virtualType>
    
    <!-- V5.0.2: Configure Proxy for Heavy Dependency -->
    <!-- 
        This tells Magento: When BannerStats asks for HeavyBannerProcessor,
        inject a Proxy instead of the real class.
        
        Proxy = Lightweight placeholder
        Real class = Only created when you call a method
        
        Educational Value:
        - Shows lazy loading pattern
        - Demonstrates performance optimization
        - Illustrates when to use Proxy vs direct injection
    -->
    <type name="Vodacom\SiteBanners\Block\BannerStats">
        <arguments>
            <argument name="heavyProcessor" xsi:type="object">
                Vodacom\SiteBanners\Helper\HeavyBannerProcessor\Proxy
            </argument>
        </arguments>
    </type>
    
    <!-- V5.0.2: Register Console Command -->
    <type name="Magento\Framework\Console\CommandListInterface">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="vodacom_banner_demo_patterns" xsi:type="object">
                    Vodacom\SiteBanners\Console\Command\DemonstratePatterns
                </item>
            </argument>
        </arguments>
    </type>
    
    <!-- V6.0.1: Before Plugins Configuration -->
    <!--
        Before Plugins: Execute BEFORE the original method
        
        Plugin Naming Convention:
        - name: Unique identifier (snake_case recommended)
        - type: Full class name of plugin
        - sortOrder: Execution order (lower = earlier)
        
        Plugin Method Naming:
        - Pattern: before{OriginalMethodName}
        - Example: beforeSave() intercepts save()
        
        Execution Flow:
        1. TitleSanitizer::beforeSave() (sortOrder 5) - Modifies title
        2. SaveLogger::beforeSave() (sortOrder 10) - Logs operation
        3. Original BannerRepository::save() executes
        
        Use Cases:
        - Input validation
        - Data sanitization
        - Logging/auditing
        - Permission checks
    -->
    <type name="Vodacom\SiteBanners\Model\BannerRepository">
        <!-- Title Sanitizer Plugin - Executes FIRST (lowest sortOrder) -->
        <plugin name="banner_repository_title_sanitizer" 
                type="Vodacom\SiteBanners\Plugin\BannerRepositoryTitleSanitizer" 
                sortOrder="5"/>
        
        <!-- Save Logger Plugin - Executes SECOND (higher sortOrder) -->
        <plugin name="banner_repository_save_logger" 
                type="Vodacom\SiteBanners\Plugin\BannerRepositorySaveLogger" 
                sortOrder="10"/>
    </type>
    
    <!-- V6.0.2: After Plugins Configuration -->
    <!--
        After Plugins: Execute AFTER the original method completes
        
        Plugin Method Naming:
        - Pattern: after{OriginalMethodName}
        - Example: afterSave() intercepts save()
        
        Method Signature:
        - First param: $subject (the intercepted class instance)
        - Second param: $result (return value from original method)
        - Remaining params: original method parameters (optional, for context)
        - Must return same type as original method
        
        Execution Flow:
        1. Before plugins execute (V6.0.1: TitleSanitizer, SaveLogger)
        2. Original method executes (e.g., save(), getById(), delete())
        3. After plugins execute in sortOrder:
           - BannerDataEnhancer (sortOrder 5) - Add computed fields
           - SearchResultsEnhancer (sortOrder 10) - Add statistics to collections
           - DeleteValidator (sortOrder 15) - Log delete operations
        4. Final result returned to caller
        
        Use Cases:
        - Add computed fields to results
        - Enhance data with real-time calculations
        - Log operation results
        - Transform return values
        - Add metadata/statistics
    -->
    <type name="Vodacom\SiteBanners\Model\BannerRepository">
        <!-- Banner Data Enhancer - Adds computed fields after save/getById -->
        <plugin name="banner_repository_data_enhancer" 
                type="Vodacom\SiteBanners\Plugin\BannerDataEnhancer" 
                sortOrder="5"/>
        
        <!-- Search Results Enhancer - Adds statistics to getList() results -->
        <plugin name="banner_repository_search_results_enhancer" 
                type="Vodacom\SiteBanners\Plugin\BannerSearchResultsEnhancer" 
                sortOrder="10"/>
        
        <!-- Delete Validator - Logs delete operation results -->
        <plugin name="banner_repository_delete_validator" 
                type="Vodacom\SiteBanners\Plugin\BannerDeleteValidator" 
                sortOrder="15"/>
    </type>
    
    <!-- V6.0.3: Around Plugins Configuration -->
    <!--
        Around Plugins: The MOST POWERFUL plugin type - execute both BEFORE and AFTER
        
        Around plugins wrap the original method, giving you complete control:
        1. Execute code BEFORE the original method
        2. Decide WHETHER to call the original method (via $proceed callable)
        3. Execute code AFTER the original method
        4. Modify arguments AND return values
        5. Add exception handling around original method
        
        Plugin Method Naming:
        - Pattern: around{OriginalMethodName}
        - Example: aroundSave() intercepts save()
        
        Method Signature:
        - First param: $subject (the intercepted class instance)
        - Second param: callable $proceed (closure representing original method + remaining plugins)
        - Remaining params: original method parameters
        - Must return same type as original method
        
        The $proceed callable:
        - Represents the next plugin in the chain OR the original method
        - You MUST call $proceed(...) to continue execution
        - You CAN skip calling $proceed() to bypass the original method entirely
        - Pass modified arguments to $proceed() to change what original method receives
        
        Complete Execution Flow (All Plugin Types):
        
        Client calls: bannerRepository.save($banner)
            ↓
        BEFORE Plugins (V6.0.1):
          1. TitleSanitizer::beforeSave() (sortOrder 5) - Clean title
          2. SaveLogger::beforeSave() (sortOrder 10) - Log CREATE/UPDATE
            ↓
        AROUND Plugins (V6.0.3) - BEFORE $proceed():
          3. CacheLayer::aroundSave() (sortOrder 5) - Check cache, invalidate
          4. (Around plugin calls $proceed($banner))
            ↓
        ORIGINAL METHOD:
          5. BannerRepository::save($banner) - Actual database save
            ↓
        AROUND Plugins (V6.0.3) - AFTER $proceed():
          6. CacheLayer::aroundSave() continues - Log cache invalidation
            ↓
        AFTER Plugins (V6.0.2):
          7. DataEnhancer::afterSave() (sortOrder 5) - Calculate status
          8. (other after plugins if applicable)
            ↓
        Enhanced result returned to client
        
        Use Cases:
        - Caching layer (check cache, skip DB if hit)
        - Performance monitoring (measure execution time)
        - Circuit breaker (prevent execution under certain conditions)
        - Request throttling (rate limiting)
        - Feature flags (enable/disable features)
        - Exception handling (wrap method in try-catch)
        - Conditional execution (skip method based on criteria)
        
        WARNING: Around plugins are powerful but can be dangerous!
        - Always call $proceed() unless you have a specific reason not to
        - Not calling $proceed() means original method + remaining plugins never execute
        - Use before/after plugins when possible - only use around when necessary
    -->
    <type name="Vodacom\SiteBanners\Model\BannerRepository">
        <!-- Cache Layer - Implements cache-aside pattern for save/getById -->
        <!--
            Pattern: Cache-Aside (Lazy Loading)
            - aroundSave(): Invalidate cache BEFORE save, confirm AFTER
            - aroundGetById(): Check cache BEFORE proceed, return cached data if HIT
            
            Demonstrates: How around plugins can SKIP original method execution
            when data is already cached (performance optimization)
        -->
        <plugin name="banner_repository_cache_layer" 
                type="Vodacom\SiteBanners\Plugin\BannerRepositoryCacheLayer" 
                sortOrder="5"/>
        
        <!-- Performance Monitor - Measures execution time of getList() -->
        <!--
            Pattern: Performance Profiling
            - Record start time BEFORE $proceed()
            - Call $proceed() to execute method
            - Calculate duration AFTER $proceed() completes
            - Log with appropriate level (INFO/WARNING for slow queries)
            
            Demonstrates: Around plugins have access to timing information
            that before/after plugins cannot easily capture together
        -->
        <plugin name="banner_repository_performance_monitor" 
                type="Vodacom\SiteBanners\Plugin\BannerRepositoryPerformanceMonitor" 
                sortOrder="10"/>
        
        <!-- Circuit Breaker - Prevents deletion of protected banners -->
        <!--
            Pattern: Circuit Breaker / Conditional Execution
            - Check if banner is protected BEFORE $proceed()
            - If protected: throw exception, DO NOT call $proceed()
            - If allowed: call $proceed() to execute deletion
            - Log approval/rejection
            
            Demonstrates: Around plugins can PREVENT method execution entirely
            based on business rules (e.g., sort_order < 10 = protected)
        -->
        <plugin name="banner_repository_circuit_breaker" 
                type="Vodacom\SiteBanners\Plugin\BannerRepositoryCircuitBreaker" 
                sortOrder="15"/>
    </type>
    
</config>
