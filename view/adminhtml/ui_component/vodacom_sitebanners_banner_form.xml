<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">
        vodacom_sitebanners_banner_form.banner_form_data_source</item>
        </item>
        <item
            name="label" xsi:type="string" translate="true">Banner Information</item>
        <item
            name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>

    <settings>
        <buttons>
            <button name="back" class="Vodacom\SiteBanners\Block\Adminhtml\Banner\Edit\BackButton" />
            <button name="delete"
                class="Vodacom\SiteBanners\Block\Adminhtml\Banner\Edit\DeleteButton" />
            <button name="save" class="Vodacom\SiteBanners\Block\Adminhtml\Banner\Edit\SaveButton" />
            <button name="save_and_continue"
                class="Vodacom\SiteBanners\Block\Adminhtml\Banner\Edit\SaveAndContinueButton" />
        </buttons>
        <namespace>vodacom_sitebanners_banner_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>vodacom_sitebanners_banner_form.banner_form_data_source</dep>
        </deps>
    </settings>

    <dataSource name="banner_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="vodacom_sitebanners/banner/save" />
        </settings>
        <aclResource>Vodacom_SiteBanners::banner_save</aclResource>
        <dataProvider class="Vodacom\SiteBanners\Model\Banner\DataProvider"
            name="banner_form_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>banner_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>

    <fieldset name="banner_fieldset">
        <settings>
            <label translate="true">General Information</label>
        </settings>

        <field name="banner_id" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">banner</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <dataScope>banner_id</dataScope>
            </settings>
        </field>

        <field name="is_active" sortOrder="10" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">banner</item>
                    <item name="default"
                        xsi:type="number">1</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Enable Banner</label>
                <dataScope>is_active</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true"
                                xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>

        <field name="title" sortOrder="20" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">banner</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Banner Title</label>
                <dataScope>title</dataScope>
            </settings>
        </field>

        <!-- 
        ====================================================================
        V3.0.4: WYSIWYG Editor with Page Builder Integration
        ====================================================================
        Changed from: formElement="textarea" (V3.0.2 and earlier)
        Changed to: formElement="wysiwyg" with Page Builder support
        
        CRITICAL CONFIGURATION:
        1. template="ui/form/field" - Required for Page Builder modals to work
        2. <update handle="editor"/> in layout XML - Loads Page Builder JS/CSS
        3. admin__field-wide - Full-width editor like CMS pages/blocks
        4. rows="8" - Default editor height before Page Builder activates
        5. elementTmpl with proper ID - Resolves "for attribute" warning
        
        The elementTmpl="ui/form/element/wysiwyg" explicitly sets the template
        that generates proper HTML IDs for the textarea, allowing the label's
        "for" attribute to match correctly and resolve accessibility warnings.
        
        Storage Requirement:
        Page Builder generates verbose HTML requiring MEDIUMTEXT storage.
        Schema patch ExpandContentFieldForPageBuilder.php expands content field to 16MB.
        ====================================================================
        -->
        <field name="content" sortOrder="30" formElement="wysiwyg">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">banner</item>
                    <!-- V3.0.4: Page Builder Configuration -->
                    <item name="wysiwygConfigData" xsi:type="array">
                        <!-- Enable Page Builder drag-drop interface -->
                        <item name="is_pagebuilder_enabled" xsi:type="boolean">true</item>
                        <!-- Show toggle between WYSIWYG and HTML code view -->
                        <item name="toggle_button" xsi:type="boolean">true</item>
                        <!-- Set editor height for better visibility -->
                        <item name="height" xsi:type="string">500px</item>
                        <!-- Enable variable insertion (e.g., {{store url="..."}}) -->
                        <item name="add_variables" xsi:type="boolean">true</item>
                        <!-- Enable widget insertion (e.g., {{widget type="..."}}) -->
                        <item name="add_widgets" xsi:type="boolean">true</item>
                        <!-- Enable image upload/insertion from media gallery -->
                        <item name="add_images" xsi:type="boolean">true</item>
                        <!-- Enable template directives processing -->
                        <item name="add_directives" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Content</label>
                <dataScope>content</dataScope>
            </settings>
            <formElements>
                <wysiwyg>
                    <settings>
                        <wysiwyg>true</wysiwyg>
                    </settings>
                </wysiwyg>
            </formElements>
        </field>

        <field name="sort_order" sortOrder="40" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">banner</item>
                    <item name="default"
                        xsi:type="number">0</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="validate-number" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Sort Order</label>
                <dataScope>sort_order</dataScope>
            </settings>
        </field>

        <field name="active_from" sortOrder="50" formElement="date">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">banner</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="validate-date" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Active From</label>
                <dataScope>active_from</dataScope>
            </settings>
        </field>

        <field name="active_to" sortOrder="60" formElement="date">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">banner</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="validate-date" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Active To</label>
                <dataScope>active_to</dataScope>
            </settings>
        </field>
    </fieldset>
</form>